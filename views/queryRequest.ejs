<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" crossorigin="anonymous">

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="css/admincss.css">
  <title>User Details</title>

</head>

<body>

  <div class="wrap">
    <div class="sec">
      <div class="top_navbar">
        <div class="hamburger">
          <a href="#">
            <i class="fas fa-bars"></i>
          </a>
        </div>
      </div>
      <div class="cont">

        <form class="" action="queryRequest" method="post">
          <div class="row city-box1 ">

            <h4>Fillter the Customer requests based on the below parameters.</h4>
            <hr>

            <div class="col-lg-4">
              <label for="city" class="form-label headings">Select a City</label>
              <select name="selectCity" class="form-select">
                <%cityDetailsLists.forEach(function(cityDetail){%>
                <option value="<%=cityDetail.cityName%>"><%=cityDetail.cityName%></option>
                <%})%>
              </select>




            </div>
            <div class="col-lg-4">
              <div class="">
                <label for="status" class="form-label headings">Select Status</label>

                <select name="status" class="form-select">

                  <option value="Under Processing">Under Processing</option>
                  <option value="Tour Confirmed">Tour Confirmed</option>
                  <option value="On-Hold By Customer">On-Hold By Customer</option>
                  <option value="On-Hold By Office">On-Hold By Office</option>
                  <option value="Tour Cancelled">Tour Cancelled</option>
                  <option value="Request Closed">Request Closed</option>

                </select>

              </div>

            </div>
            <div class="col-lg-2">
              <label for="start_date" class="form-label">Start Date</label>
              <input type="date" class="form-control" name="start_date" value="">

            </div>
            <div class="col-lg-2">
              <label for="end_date" class="form-label">End Date</label>
              <input type="date" class="form-control" name="end_date" value="">

            </div>



          </div>
          <div class="row city-box1" >
            <button type="submit" name="button" class="btn btn-outline-dark  submit-btn">Submit</button>
          </div>



        </form>

        <% if (booking_details!="") { %>



            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">S.NO</th>
                    <th scope="col">Name</th>
                    <th scope="col">Request Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">City Selected</th>
                    <th scope="col">See Details</th>

                  </tr>
                </thead>
                <tbody>
                  <%booking_details.forEach(function(booking_detail,index){%>
                  <tr>
                    <th scope="row"><%=index+1%></th>
                    <td>
                         <label for="name" class="form-label"><%=booking_detail.name%></label>

                    </td>
                    <td>
                         <label for="date" class="form-label"><%=booking_detail.booking_date%></label>

                    </td>
                    <td>
                         <label for="status" class="form-label"><%=booking_detail.Status%></label>

                    </td>
                    <td>
                         <label for="city" class="form-label"><%=booking_detail.city%></label>

                    </td>
                    <td>
                         
                         <form class="" action="/handleuser" method="post">
                           <button class="btn btn-outline-dark bttn" type="submit" name="email" value="<%=booking_detail.email%>">Know User</button>
                         </form>

                    </td>

                  </tr>
                  <%})%>
                </tbody>

              </table>

            </div>



        <% } %>

      </div>


    </div>
    <%- include('sidebar');  -%>

  </div>


  <script src="common.js"></script>
</body>

</html>
