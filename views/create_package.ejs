<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" crossorigin="anonymous">

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/admincss.css">
  <title>Create-Packages</title>

</head>

  <body>
    <div class="wrap">
      <div class="sec">
        <div class="top_navbar">
          <div class="hamburger">
            <a href="#">
              <i class="fas fa-bars"></i>
            </a>
          </div>
        </div>
        <div class="cont">
          <% if(success!=""){%>
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              <strong><%=success%>!</strong>
            </div>
          <% } %>
          <form class="" action="createPackage" enctype="multipart/form-data" method="post">
            <div class="row city-box1 ">

              <div class="col-lg-6">
                <label for="package_city" class="form-label headings">Select City</label>
                <select name="selectCity" id="package_city" class="form-select">
                    <%cityDetailsLists.forEach(function(cityDetail){%>
                      <option value="<%=cityDetail.cityName%>"><%=cityDetail.cityName%></option>
                      <%})%>
                </select>

                <div class="package-days">
                  <label for="package_days" class="form-label headings">Package Days</label>
                  <input type="number" class="form-control" name="packageDays" value="" id="package_days" min="0" required>

                </div>
                <div class="package-price">
                  <label for="package_price" class="form-label headings">Package Price(SAR)</label>
                  <input type="text" class="form-control" name="packagePrice" value="" id="package_price" required>

                </div>
                <div class="package-type">
                  <label for="package_type" class="form-label headings">Package Type</label>
                  <input type="text" class="form-control" name="packageType" value="" id="package_type" required>

                </div>
              </div>
              <div class="col-lg-6">
                <div class="">
                  <label for="packageName" class="form-label headings">Package Name</label>
                  <input type="text" class="form-control" name="packageName" value="" id="package_name" required>

                </div>
                <div class="">
                  <img id="package_img" width="100" height="100" />
                  <input type="file" name="packageImg" class="form-control" id="package_img" onchange="document.getElementById('package_img').src = window.URL.createObjectURL(this.files[0])" style="width:50%" required>

                </div>
              </div>



            </div>
            <div class="row">
              <button type="submit" name="button" class="btn btn-outline-dark  submit-btn">Submit</button>
            </div>



          </form>
        </div>
      </div>
      <%- include('sidebar');  -%>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="common.js"></script>

  </body>

</html>
